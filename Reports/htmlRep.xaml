<Window x:Class="SR28.Reports.htmlRep"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="htmlRep" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="38" BorderBrush="Transparent" BorderThickness="4">
            <Label Content="Comparison Table" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="30"/>
        </Border >
        <WebBrowser Grid.Row="1" HorizontalAlignment="Stretch"    Name="web" VerticalAlignment="Stretch"  />
    </Grid>
</Window>
